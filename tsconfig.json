{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx", "src/types/**/*.d.ts"],
  "exclude": ["**/*"] // Add this to prevent direct compilation
}
